# OCR Settings
TESSERACT_LANG=deu+eng
OCR_ENGINE=tesseract
OCR_DPI=300

# Privacy Settings
ENABLE_PII_REMOVAL=true
ANONYMIZE_METADATA=true

# Storage
DATA_PATH=./data
INDEX_PATH=./indices
LOG_PATH=./logs

# Redis
REDIS_URL=redis://redis:6379
REDIS_TTL=3600

# Search Settings
MIN_RELEVANCE_SCORE=0.3
MAX_SEARCH_RESULTS=50
SEMANTIC_SEARCH_ENABLED=true
CACHE_ENABLED=true
CACHE_TTL=3600

# Learning
ENABLE_LEARNING=true
LEARNING_UPDATE_INTERVAL=300
LEARNING_THRESHOLD=0.3

# API Settings
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=false

# CORS Settings - FIXED: Sichere CORS-Konfiguration
CORS_ALLOW_ORIGIN=http://localhost:8080,http://localhost:5678
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS=*

# N8N Settings
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme
N8N_WEBHOOK_URL=http://n8n:5678/webhook

# Ollama Settings
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=120

# Open WebUI Settings
WEBUI_SECRET_KEY=change-me-in-production
WEBUI_AUTH=true

# Performance
MAX_WORKERS=4
BATCH_SIZE=10

# FIXED: ChromaDB Telemetrie deaktivieren
CHROMA_TELEMETRY=false
ANONYMIZED_TELEMETRY=false

# FIXED: User Agent f체r HTTP-Requests
USER_AGENT=DocumentIntelligenceSystem/1.0

# FIXED: PyTorch Settings (f체r Kompatibilit채t)
TORCH_VERSION=2.1.0
PYTORCH_ENABLE_MPS_FALLBACK=1

# FIXED: Langchain Settings
LANGCHAIN_VERBOSE=false
LANGCHAIN_TRACING=false

