# COHERE_API_KEY=...

# === Performance ===
# Night job hours (22-6 by default)
NIGHT_JOB_START_HOUR=22
NIGHT_JOB_END_HOUR=6

# === Privacy ===
# Enable anonymizer for external API calls
ENABLE_ANONYMIZER=true
