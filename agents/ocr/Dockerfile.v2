FROM python:3.11-slim

WORKDIR /app

# System-Abhängigkeiten für Python-Pakete installieren
RUN apt-get update && apt-get install -y \
    libpq-dev \
    gcc g++ \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Python-Abhängigkeiten installieren
COPY agents/ocr/requirements.txt requirements.txt
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pydantic==1.10.13  # Explizit hinzufügen

# OCR-spezifische Systempakete installieren
RUN apt-get update && apt-get install -y \
    tesseract-ocr \
    tesseract-ocr-deu \
    tesseract-ocr-eng \
    poppler-utils \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Anwendung kopieren (wie ursprünglich)
COPY agents/ocr/ocr_agent.py ocr_agent.py

# Verzeichnisse erstellen
RUN mkdir -p /app/logs /data

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD python -c "import asyncpg; print('OK')" || exit 1

CMD ["python", "-u", "ocr_agent.py"]