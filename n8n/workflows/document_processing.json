{
  "name": "Document Intelligence Pipeline",
  "nodes": [
    {
      "parameters": {
        "path": "doc-webhook",
        "responseMode": "onReceived",
        "options": {}
      },
      "name": "Document Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300],
      "webhookId": "doc-intelligence-webhook"
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{$json[\"event\"]}}",
              "operation": "equals", 
              "value2": "file_added"
            }
          ]
        }
      },
      "name": "Check Event Type",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://search_api:8001/search",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "query",
              "value": "={{$json[\"query\"]}}"
            },
            {
              "name": "limit", 
              "value": "={{$json[\"limit\"] || 5}}"
            }
          ]
        },
        "options": {}
      },
      "name": "Search Documents",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 3,
      "position": [650, 200]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://ollama:11434/api/generate",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "model",
              "value": "mistral"
            },
            {
              "name": "prompt",
              "value": "Analysiere diese Suchergebnisse: {{JSON.stringify($json)}}"
            },
            {
              "name": "stream",
              "value": false
            }
          ]
        },
        "options": {}
      },
      "name": "AI Analysis",
      "type": "n8n-nodes-base.httpRequest", 
      "typeVersion": 3,
      "position": [850, 200]
    },
    {
      "parameters": {
        "operation": "set",
        "key": "search_result_{{$json[\"search_id\"] || 'default'}}",
        "value": "={{JSON.stringify($json)}}"
      },
      "name": "Cache Results",
      "type": "n8n-nodes-base.redis",
      "typeVersion": 1,
      "position": [1050, 200]
    }
  ],
  "connections": {
    "Document Webhook": {
      "main": [
        [
          {
            "node": "Check Event Type",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Check Event Type": {
      "main": [
        [
          {
            "node": "Search Documents", 
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Search Documents": {
      "main": [
        [
          {
            "node": "AI Analysis",
            "type": "main", 
            "index": 0
          }
        ]
      ]
    },
    "AI Analysis": {
      "main": [
        [
          {
            "node": "Cache Results",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": true,
  "settings": {},
  "versionId": "1"
}
